{
    "name": "acme-widget-co/sales-system",
    "description": "Sales system for ACME Widget Co",
    "type": "project",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "AcmeWidgetCo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AcmeWidgetCo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse"
    }
} 